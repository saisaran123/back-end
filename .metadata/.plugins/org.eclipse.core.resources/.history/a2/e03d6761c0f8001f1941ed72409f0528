.post-text {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 5; /* Show only first 5 lines */
    -webkit-box-orient: vertical;
    transition: all 0.4s ease;
    line-height: 1.6;
    max-height: 120px; /* Adjust based on your line height and number of lines */
}

.post-text.expanded {
    -webkit-line-clamp: unset; /* Show full content */
    max-height: 3000px; /* Adjust to a large enough value to accommodate the full content */
}

